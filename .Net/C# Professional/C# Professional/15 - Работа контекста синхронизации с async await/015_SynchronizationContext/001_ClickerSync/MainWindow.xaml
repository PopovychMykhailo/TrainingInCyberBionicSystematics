        <TextBox x:Name="txtClick" HorizontalAlignment="Left" Height="155" Margin="110,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" IsReadOnly="True" Grid.ColumnSpan="2"/>
